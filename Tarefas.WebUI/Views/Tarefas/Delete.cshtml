@model TaskManager.Application.DTOs.TarefaDTO

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<h2>@ViewData["Title"]</h2>

<h4>Tem certeza que deseja excluir esta tarefa?</h4>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Data de Vencimento</dt>
            <dd class="col-sm-9">@Model.DueDate.ToString()</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
