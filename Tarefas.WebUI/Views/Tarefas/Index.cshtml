@model IEnumerable<TaskManager.Application.DTOs.TarefaDTO>

@{
    ViewData["Title"] = "Gerenciamento de Tarefas";
}

<h2>@ViewData["Title"]</h2>

<div class="row mb-3">
    <div class="col-md-12">
        <a asp-action="Create" class="btn btn-primary">
            <span class="fas fa-plus"></span> Registrar Nova
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            @if (Model != null && Model.Any())
            {
                <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                <th>@Html.DisplayNameFor(model => model.First().DueDate)</th>
                <th>Ações</th>
            }
            else
            {
                <th>Título</th>
                <th>Status</th>
                <th>Data de Vencimento</th>
                <th>Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Status</td>
                    <td>@item.DueDate.ToString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Editar">
                            <span class="fas fa-edit"></span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" title="Detalhes">
                            <span class="fas fa-search"></span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Excluir">
                            <span class="fas fa-trash-alt"></span>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Nenhuma tarefa encontrada.</td>
            </tr>
        }
    </tbody>
</table>
